<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/cardBackground"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/addressgreybackground"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_centerVertical="true">



       <com.eoutlet.Eoutlet.customview.MonestrateRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/list_item_size"
            android:textColor="#000"

            android:layout_marginTop="2dp"
            android:id="@+id/phone"/>

        <ImageView
            android:layout_width="@dimen/text_size_eng"
            android:layout_height="@dimen/text_size_eng"
            android:layout_below="@+id/street"

            android:layout_centerInParent="true"



            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/mobileNumber"
            android:src="@drawable/ic_checkout_phone">

        </ImageView>
    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"


        android:layout_alignParentRight="true"


        android:orientation="vertical">

        <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/list_item_size"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="right"

            android:id="@+id/name"/>

        <com.eoutlet.Eoutlet.customview.MonestrateRegularTextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="hrekhrkehrehrke"
            android:textSize="@dimen/list_item_size"
            android:textColor="#262628"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"

            android:id="@+id/street"/>

        <com.eoutlet.Eoutlet.customview.MonestrateRegularTextView
            android:id="@+id/city"
              android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/app_name"
               android:layout_gravity="right"
              android:gravity="right"  
            android:textColor="#000"
            android:textSize="@dimen/list_item_size" />



     <com.eoutlet.Eoutlet.customview.MonestrateRegularTextView
              android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/list_item_size"
            android:textColor="#000"
          android:layout_gravity="right" 
            android:layout_marginTop="2dp"
            android:id="@+id/country"/>



        <ImageView
            android:id="@+id/deleteCart"
            android:layout_width="@dimen/text_size"
            android:layout_height="@dimen/text_size"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_bin"
            android:layout_gravity="right"
            android:text="DELETE"
            android:backgroundTint="#A63735"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/margin_top"
        android:layout_height="@dimen/margin_top"
        android:src="@drawable/ic_unselect_card"
        android:layout_centerVertical="true"
        android:id="@+id/id_selector"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:visibility="gone"

        />


</RelativeLayout>