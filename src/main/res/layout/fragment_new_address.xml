<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"



    android:id="@+id/addressContainer"

    android:clickable ="true"
    android:background="@color/white"
    tools:context="com.eoutlet.Eoutlet.fragments.NewAddressFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="#FFFFFF"

        android:layout_height="70dp"

        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="#D8A664"
                android:textStyle="bold"
                android:textSize="@dimen/maintextsize"
                android:text="عناوين الشحن "/>

            <ImageView
                android:id="@+id/serachbar"
                android:layout_width="@dimen/search_image_width"

                android:layout_height="@dimen/search_image_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_filter_profile" />
            <ImageView
                android:layout_width="@dimen/back_image_width"
                android:layout_height="@dimen/_8sdp"

                android:id="@+id/backarrow"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"

                android:layout_centerVertical="true"
                android:layout_weight="0.25"

                android:src="@drawable/ic_backarrow" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
        <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:textColor="#77838F"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_17sdp"
            android:textSize="@dimen/text_size"
            android:text="تعديل العنوان"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/text_size"
        android:orientation="vertical"

        android:layout_marginRight="@dimen/text_size">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/address_list_Recycler"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colour_black"
                android:id="@+id/addnewAddress"
                android:visibility="gone"

                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="@string/addaddress"
                />
            </LinearLayout>
            <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colour_black"
                android:id="@+id/setbymap"

                android:textStyle="bold"
                android:textSize="@dimen/text_size"
                android:text="@string/addaddress"
                />
        </LinearLayout>


        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

    </LinearLayout>

</FrameLayout>
