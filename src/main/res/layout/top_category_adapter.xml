<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_10sdp"
   android:clickable="true"
    android:gravity="center"
    android:background="@drawable/white_shape_top_radius"
    android:layout_gravity="center_horizontal"

    android:orientation="vertical">


<RelativeLayout
    android:layout_width="@dimen/_55sdp"
    android:layout_height="@dimen/_30sdp"
    android:layout_gravity="center"
    android:id="@+id/topcatitem"
    android:gravity="center_vertical|center_horizontal"


    android:orientation="vertical">

    <com.eoutlet.Eoutlet.customview.MulishBoldTextView
        android:id="@+id/topcatname"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:alpha="0.5"

        android:gravity="center_horizontal"
        android:maxLines="2"

        android:text="All New Arrivals"
        android:textColor="#222B45"
        android:textSize="@dimen/_8sdp" />


</RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:id= "@+id/bottomline"
        android:visibility="visible"
        android:layout_alignBottom="@+id/topcatname"
        android:layout_alignLeft="@+id/topcatname"
        android:layout_alignRight="@+id/topcatname"

        android:src="@drawable/ic_categorybottomline"/>

</LinearLayout>
