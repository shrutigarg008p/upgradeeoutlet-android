<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.Otp_Verificationfragment">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/mainlayout"

        android:paddingTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_icon2"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"

            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_elogo" />
        <ImageView
            android:layout_width="@dimen/main_icon"
            android:layout_height="@dimen/main_icon2"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"



            android:src="@drawable/ic_canvas" />

        <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
            android:id="@+id/textview_otp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTint="#FF4081"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"

            android:textColor="@color/colour_black"

            android:gravity="center_horizontal"
            android:text="بريدك الالكتروني" />




        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTint="#FF4081"
            android:hint="البريد الإلكتروني"

            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_size"
            android:weightSum="1">
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/text_size_eng"
                android:layout_weight="1"
                android:background="@drawable/red_rectangle"
                android:clickable="true"
                android:text="استمر"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"


                android:textColor="#fff"
                android:textSize="@dimen/maintextsize" />



        </LinearLayout>



    </LinearLayout>

</FrameLayout>
