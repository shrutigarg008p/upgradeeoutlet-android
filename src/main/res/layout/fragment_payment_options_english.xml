<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.eoutlet.Eoutlet.fragments.PaymentOptionsFragment">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"



                android:layout_centerInParent="true"

                android:src="@drawable/logo_english_black" />



                <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.50"
                    android:gravity="center_horizontal"
                    android:src="@drawable/ic_leftarrowlat" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/toolbar_color"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardradiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shadow_background"
                android:elevation="6dp"
                android:paddingBottom="@dimen/_12sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_8sdp"

                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <ImageView
                            android:id="@+id/cardradiobtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginRight="@dimen/text_size"
                            android:src="@drawable/ic_circle" />



                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_rectangle_corners">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/visa_logo" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rectangle_corners">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/master" />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rectangle_corners">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"

                                android:src="@drawable/mada" />
                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rectangle_corners">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"

                                android:src="@drawable/knet2" />


                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:background="@drawable/white_rectangle_corners">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"

                                android:src="@drawable/mannet" />

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_marginRight="@dimen/payment_textmargin"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:singleLine="true"
                        android:text="البطاقة الائتمانية"
                        android:textAlignment="textStart"
                        android:textColor="@color/colour_black"
                        android:textSize="@dimen/payment_text_size"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/edt_card_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/colorPrimarytext"
                    app:cardCornerRadius="10dp">

                    <include

                        layout="@layout/edit_card_info_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>


                <WebView
                    android:id="@+id/paymentWebview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:visibility="gone" />

            </LinearLayout>
            <!-- <include android:id="@+id/edt_card_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/edit_card_info"/>-->

            <androidx.cardview.widget.CardView
                android:id="@+id/stcButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"

                android:elevation="6dp"
                android:paddingRight="@dimen/_8sdp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"

                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/text_size_eng"


                    android:background="@drawable/white_rectangle_corners">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"





                        android:src="@drawable/stc_pay" />


                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/stcPaymain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_8sdp">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        android:layout_alignParentLeft="true"
                        >
                        <ImageView
                            android:id="@+id/stcRadiobutton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="@dimen/text_size"
                            android:src="@drawable/ic_circle" />
                        <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                            android:id="@+id/stcAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_gravity="center"

                            android:text="STC PAY"
                            android:textColor="#1E2022"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />




                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/callLayout"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"

                        android:padding="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/text_size"


                        android:background="@drawable/checkoutbackground">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/saudi_flag"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:id="@+id/flagicon"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:padding="@dimen/_4sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_toLeftOf="@+id/flagicon"
                            android:background="@color/grey_colour"/>

                        <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
                            android:id="@+id/edittext_stcMobile"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left"
                            android:layout_alignParentLeft="true"

                            android:hint="5××××××××"


                            android:padding="@dimen/_4sdp"
                            android:drawableTint="#FF4081"
                            android:textSize="@dimen/_9sdp"


                            android:inputType="phone"
                            android:singleLine="true"
                            />
                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"
                android:elevation="6dp"
                android:paddingRight="@dimen/_8sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:id="@+id/walletcardview">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"

                    android:paddingRight="@dimen/_12sdp"
                    >
                    <ImageView
                        android:id="@+id/walletcheckbox"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical|left"


                        android:layout_marginLeft="@dimen/_8sdp"

                        android:src="@drawable/ic_circle" />
                    <FrameLayout
                        android:id="@+id/walletImage"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"

                        android:background="@drawable/white_rectangle_corners">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"


                            android:src="@drawable/ic_wallet_icon" />


                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"

                        android:layout_toRightOf="@+id/walletcheckbox"
                        android:orientation="vertical">

                        <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                            android:id="@+id/walletamount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"



                            android:layout_marginRight="50dp"

                            android:singleLine="true"
                            android:text="My Wallet Balance"
                            android:textColor="#1E2022"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                            android:id="@+id/leftwalletamount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="50dp"


                            android:gravity="left"
                            android:maxLines="2"
                            android:text="الرصيد المتبقي بحسابكم : 10000000000 SAR "
                            android:textColor="@color/colour_black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/codradiobutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"

                android:elevation="6dp"
                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/text_size_eng"
                    android:background="@drawable/white_rectangle_corners">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"






                        android:src="@drawable/ic_cod" />


                </FrameLayout>


                <ImageView
                    android:id="@+id/codradiobtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|left"

                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_circle" />

                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/codcharges"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/payment_textmargin"
                    android:paddingTop="@dimen/text_size_eng"
                    android:paddingRight="@dimen/payment_textmargin"

                    android:paddingBottom="@dimen/text_size_eng"


                    android:maxLines="2"
                    android:text="Cash On Delivery"
                    android:textAlignment="textStart"
                    android:textColor="#1E2022"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="LtrCompat" />


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/paypalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"
                android:visibility="visible"
                android:elevation="6dp"
                android:paddingRight="@dimen/_8sdp"

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_6sdp">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"


                            android:src="@drawable/ic_paypal" />
                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_pay" />
                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_pal" />

                    </LinearLayout>
                    <com.eoutlet.Eoutlet.customview.MulishRegularTextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/payment_textmargin"
                        android:paddingTop="@dimen/text_size_eng"
                        android:paddingRight="@dimen/payment_textmargin"

                        android:paddingBottom="@dimen/text_size_eng"
                        android:id="@+id/paypaltext"


                        android:maxLines="2"
                        android:text="Paypal"
                        android:textAlignment="textStart"
                        android:textColor="#1E2022"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/text_size_eng"
                        >




                        <ImageView
                            android:id="@+id/paypalRadiobutton"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_circle" />

                    </LinearLayout>

                    <RelativeLayout

                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/text_size"


                        android:background="@drawable/checkoutbackground">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/saudi_flag"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"

                            />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:padding="@dimen/_4sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_4sdp"

                            android:background="@color/grey_colour"/>

                        <com.eoutlet.Eoutlet.customview.HalveticRegularEditText

                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right"
                            android:layout_alignParentRight="true"

                            android:hint="5××××××××"


                            android:padding="@dimen/_4sdp"
                            android:drawableTint="#FF4081"
                            android:textSize="@dimen/_9sdp"


                            android:inputType="phone"
                            android:singleLine="true"
                            />
                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tamaracardclick"
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"

                android:elevation="6dp"
                app:cardBackgroundColor="@color/white"

                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/text_size_eng"
                    android:background="@drawable/white_rectangle_corners">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tamaraenglish" />


                </FrameLayout>


                <ImageView
                    android:id="@+id/tamararadiobtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|left"

                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_circle" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/payment_textmargin">
                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/Tamaratext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/text_size_eng"
                    android:paddingRight="@dimen/payment_textmargin"
                    android:maxLines="2"
                    android:text="Pay later in 30 Days"
                    android:textAlignment="textStart"
                    android:textColor="#1E2022"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />


    <com.eoutlet.Eoutlet.customview.MulishRegularTextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_3ssp"
        android:maxLines="2"
        android:paddingRight="@dimen/payment_textmargin"
        android:paddingBottom="@dimen/_8sdp"
        android:text="(Pay in 30 days, No fees!)"
        android:textAlignment="textStart"
        android:textColor="#1E2022"
        android:textSize="@dimen/_8sdp"
        tools:ignore="RtlCompat" />

</LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tamarainstallmentscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="12dp"

                android:elevation="6dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/text_size_eng"
                    android:background="@drawable/white_rectangle_corners">


                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/tamaraenglish" />


                </FrameLayout>


                <ImageView
                    android:id="@+id/tamarainstallmentradiobtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|left"

                    android:layout_marginLeft="@dimen/_8sdp"
                    android:src="@drawable/ic_circle" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/payment_textmargin">
                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/Tamarainstallment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:paddingTop="@dimen/text_size_eng"
                    android:paddingRight="@dimen/payment_textmargin"
                    android:maxLines="2"
                    android:text="Pay in 3 Instalments"
                    android:textAlignment="textStart"
                    android:textColor="#1E2022"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <com.eoutlet.Eoutlet.customview.MulishRegularTextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/payment_textmargin"
                    android:maxLines="2"
                    android:text="(1/3 today, and the rest within 2 months)"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textAlignment="textStart"
                    android:textColor="#1E2022"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:textSize="@dimen/_8sdp"

                    tools:ignore="RtlCompat" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/cardrecyclerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="@dimen/text_size_eng"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="200dp"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_above="@+id/checkoutconfirmorder"

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="@dimen/_4sdp"

        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <com.eoutlet.Eoutlet.customview.MulishBoldTextView
            android:id="@+id/checkoueamounttext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"

            android:singleLine="true"
            android:text="الاجمالي - 1403 SAR"
            android:textAlignment="center"
            android:textColor="#77838F"
            android:textSize="@dimen/_9sdp" />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/checkoutconfirmorder"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentBottom="true"

        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/et_padding"

        android:layout_marginRight="12dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/green_rectangular_button"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/confirmpayment"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"


            >


            <com.eoutlet.Eoutlet.customview.MulishRegularTextView

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"


                android:gravity="center"


                android:text="PLACE ORDER"
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />


        </RelativeLayout>

        <View
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/dark_green_backgound"

            />

    </FrameLayout>


</RelativeLayout>
