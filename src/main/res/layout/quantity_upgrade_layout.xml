<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    android:elevation="@dimen/_5sdp"



    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_gravity="center_vertical">








        android:id="@+id/deleteItemfromCart"
        android:textColor="#777777"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            >


            <LinearLayout
                android:id="@+id/sizealter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"

                android:visibility="visible"


                >

                <TextView
                    android:id="@+id/cart_plus_button"

                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circuler_shape"

                    android:gravity="center"


                    android:text="+"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/cart_selectedQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3dp"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"

                    android:text="1"
                    android:textColor="@color/et_hint"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/cart_minace_button"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circuler_shape2"
                    android:layout_marginTop="3dp"

                    android:gravity="center"


                    android:text="âˆ’"
                    android:textColor="@color/white"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id = "@+id/deleteItemfromCart"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="@dimen/text_size_eng"
                        android:layout_height="@dimen/text_size_eng"
                        android:scaleType="fitXY"




                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_bin"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>