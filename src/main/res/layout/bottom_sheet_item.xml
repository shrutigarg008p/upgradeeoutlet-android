

<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:id="@+id/remembercardclick"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_70sdp"
    app:cardBackgroundColor="@color/white"

    android:layout_gravity="center_horizontal"


    app:cardCornerRadius="10dp"

    android:elevation="6dp"
    app:cardElevation="5dp"

    android:layout_margin="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"


    xmlns:android="http://schemas.android.com/apk/res/android">>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_gravity="center"


        >
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignTop="@+id/currencyname"
            android:layout_gravity="center_horizontal"

            android:id="@+id/currencyselectionflag"





            />
        <com.eoutlet.Eoutlet.customview.MonestarteSemiBoldTextView
            android:id="@+id/currencyname"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/currencyselectionflag"

            android:layout_gravity="center_horizontal"
        android:maxLines="2"

            android:textAlignment="textEnd"
            android:text="SAUDI ARABIA "
            android:textColor="#1E2022"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">



        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/currencyselection"
            android:layout_marginLeft="@dimen/_18sdp"
            android:visibility="gone"

            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|left"

            android:background="@drawable/unselected" />
    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/selectionbar"
        android:src="@drawable/ic_country_bottombar"
        android:layout_gravity="center"/>
</LinearLayout>