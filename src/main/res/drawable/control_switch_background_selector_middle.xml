<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colour_black"></solid>
            <stroke android:width="1dp" android:color="@color/colour_black"></stroke>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent"></solid>
            <stroke android:width="1dp" android:color="#EDEDEE"></stroke>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item >
                <shape>
                    <solid android:color="#EDEDEE"></solid>
                    <stroke android:width="1dp" android:color="#EDEDEE"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
