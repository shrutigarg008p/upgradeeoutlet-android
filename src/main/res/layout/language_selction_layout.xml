<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="#EAEAEA"></View>

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/flagimage"
        android:layout_marginTop="@dimen/_8sdp" />

    <com.eoutlet.Eoutlet.customview.MulishBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping From"
        android:layout_gravity="center_horizontal"
        android:textColor="#979797"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_10sdp" />


    <com.eoutlet.Eoutlet.customview.MulishBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/selectecountry"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_5sdp"
            android:elevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingLeft="@dimen/_3sdp"
                android:gravity="center_vertical"

                android:paddingRight="@dimen/_3sdp"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <com.eoutlet.Eoutlet.customview.MulishBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:layout_centerInParent="true"
                        android:textAlignment="textEnd"
                        android:layout_toRightOf="@+id/english"
                        android:text="English"
                        android:textColor="#1E2022"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:visibility="gone"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/english"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/unselected" />
                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_5sdp"
            android:elevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_3sdp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_3sdp"

                xmlns:android="http://schemas.android.com/apk/res/android">>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical">

                    <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:paddingBottom="@dimen/_3sdp"
                        android:textAlignment="textEnd"
                        android:layout_centerInParent="true"
                        android:text="العربية"
                        android:layout_toRightOf="@id/arabic"
                        android:textColor="#1E2022"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:orientation="horizontal"
                        android:visibility="gone"></LinearLayout>

                    <ImageView
                        android:id="@+id/arabic"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/unselected" />
                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center_horizontal"
            android:background="#EAEAEA"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:weightSum="2"
        android:orientation="horizontal">


        <com.eoutlet.Eoutlet.customview.MulishBoldTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Change Country"
            android:gravity="center"
            android:id="@+id/changecountry"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/ic_changcountrybackground"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="@dimen/_11sdp" />

        <com.eoutlet.Eoutlet.customview.MulishBoldTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Continue"
            android:id="@+id/continuetohom"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/green_rectangular_button"
            android:textColor="#fff"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
</LinearLayout>