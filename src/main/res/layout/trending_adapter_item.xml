<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:id="@+id/selectCatagory1">

    <FrameLayout  android:layout_width="@dimen/trending_product_dimension"
        android:layout_height="@dimen/trending_product_height"

        android:layout_gravity="center_horizontal"
      android:layout_margin="5dp"
        android:layout_weight="1">
        <!--android:background="@drawable/rectangular_border"-->


        <ImageView
            android:id="@+id/home1"
            android:layout_width="@dimen/trending_product_dimension"
            android:layout_height="@dimen/trending_product_height"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"

            android:scaleType="fitXY"
            android:src="@drawable/cat_image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/trendingtext"
            android:textSize=   "@dimen/text_size"
            android:text="New Arrival"/>

    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="ماركات"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:id="@+id/catagoryname1"

        android:textStyle="bold"
        android:textColor="@color/colour_black"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="ماركات"
        android:visibility="gone"
        android:id="@+id/discount"

        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>