<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical"
    android:clickable="true"
    app:ignore="NamespaceTypo">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Settings"
                android:textColor="#D8A664"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/serachbar"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_filter_profile" />


                <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.50"
                    android:gravity="center_horizontal"
                    android:src="@drawable/ic_leftarrowlat" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentlayout"

        android:layout_marginTop="@dimen/_5sdp"
        >

        <LinearLayout
            android:id="@+id/profileItemClick"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@color/white"
            android:gravity="center_vertical"

            android:orientation="horizontal">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id = "@+id/changeLanguage"
                >

                <ImageView
                    android:id="@+id/arrow_imageview"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_right_yellowarrow"
                    android:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/instagramImage"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_instagram"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/twitterImage"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/instagramImage"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_twitter_blue"
                    android:visibility="gone" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"

    android:orientation="vertical">
                <com.eoutlet.Eoutlet.customview.MulishBoldTextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"




                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"


                    android:paddingRight="5dp"
                    android:text="Change Language"


                    android:textAlignment="center"
                    android:textColor="#686E7F"
                    android:textSize="@dimen/_12sdp" />

    <com.eoutlet.Eoutlet.customview.MulishRegularTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/_60sdp"
        android:background="@android:color/transparent"
        android:gravity="center"

        android:paddingRight="5dp"
        android:text="English or Arabic"


        android:textAlignment="center"
        android:textColor="#686E7F"
        android:textSize="@dimen/_8sdp" />
</LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/changelanguageflag"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"

            android:layout_alignParentLeft="true"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"

             />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentlayout2"
        android:layout_below="@+id/parentlayout"

        android:layout_marginTop="@dimen/_5sdp"
        >

        <LinearLayout
            android:id="@+id/profileItemClick2"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@color/white"
            android:gravity="center_vertical"

            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/changecountry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >

                <ImageView
                    android:id="@+id/arrow_imageview2"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_right_yellowarrow"
                    android:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/instagramImage2"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_instagram"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/twitterImage2"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"

                    android:layout_weight="0.25"
                    android:src="@drawable/ic_twitter_blue"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">
                <com.eoutlet.Eoutlet.customview.MulishBoldTextView
                    android:id="@+id/profileName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_centerVertical="true"

                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"


                    android:paddingRight="5dp"
                    android:text="Change Country"


                    android:textAlignment="center"
                    android:textColor="#686E7F"
                    android:textSize="@dimen/_12sdp" />

                    <com.eoutlet.Eoutlet.customview.MulishRegularTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:id = "@+id/userselectedcountry"

                        android:paddingRight="5dp"
                        android:text="Current Selection-Saudi Arabia"



                        android:textAlignment="center"
                        android:textColor="#686E7F"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/changecountryflag"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"

            android:layout_alignParentLeft="true"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"

             />
    </RelativeLayout>



        <LinearLayout



            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/white"
            android:gravity="center_vertical"

            android:orientation="horizontal">



            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"

                >


                <Switch
                    android:id="@+id/notificationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_8sdp"

                    android:checked="true" />





                    <com.eoutlet.Eoutlet.customview.MulishBoldTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_centerVertical="true"

                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"


                        android:paddingRight="5dp"
                        android:text="Allow Notifications"


                        android:textAlignment="center"
                        android:textColor="#686E7F"
                        android:textSize="@dimen/_12sdp" />

                <ImageView

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_weight="0.25"
                    android:src="@drawable/notification_setting"
                   />

            </RelativeLayout>
        </LinearLayout>
</LinearLayout>