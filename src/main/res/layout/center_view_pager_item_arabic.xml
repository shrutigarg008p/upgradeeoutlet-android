<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/highlightedSlideContainer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_220sdp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/centerViewPagerImage"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_190sdp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
        <!--android:background="@color/colorAccent"-->

        <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
            android:id="@+id/centerViewPagerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Womenâ€™s Collection"
            android:textAlignment="center"
            android:textColor="#CE9F60"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone" />

        <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
            android:id="@+id/centerViewPagerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:text="Moschino T-shirt"
            android:textAlignment="center"
            android:textColor="@color/colour_black"
            android:textSize="@dimen/_12sdp" />

        <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
            android:id="@+id/centerViewPagerItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="SAR 56.46"
            android:textAlignment="center"
            android:textColor="@color/colour_black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>