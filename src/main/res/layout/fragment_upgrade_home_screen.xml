                        android:layout_below="@+id/shopKidText"
                        android:layout_marginTop="@dimen/text_size_eng"
                        android:background="@color/et_hint"
                        android:textColor="@color/colour_black"

                        />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>




