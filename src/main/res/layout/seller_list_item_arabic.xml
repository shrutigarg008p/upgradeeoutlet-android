<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/sellerProductContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/sellerProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/shoe1" />
            </androidx.cardview.widget.CardView>

            <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                android:id="@+id/sellerProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:padding="@dimen/_2sdp"
                android:text="ROBERTO CAVALLI - PERFUME656565656565656"
                android:textColor="#1E2022"
                android:textSize="@dimen/_10sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:gravity="center_horizontal">

                <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                    android:id="@+id/sellerProductOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:foreground="@drawable/cut_line"
                    android:maxLines="1"
                    android:text="999SAR"
                    android:textColor="#1E2022"
                    android:textSize="@dimen/_8sdp" />

                <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                    android:id="@+id/sellerProductNewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/sellerProductOldPrice"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="999SAR"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>