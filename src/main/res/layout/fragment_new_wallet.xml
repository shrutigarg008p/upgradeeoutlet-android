<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    tools:context="com.eoutlet.Eoutlet.fragments.NewWalletFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="محفظتى"
                android:textColor="#D8A664"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/serachbar"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/ic_filter_profile" />


               <ImageView
                    android:id="@+id/backarrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.50"
                    android:gravity="center_horizontal"
                    android:rotation="180"
                    android:src="@drawable/ic_leftarrowlat" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/gradientlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginRight="@dimen/margin_top"
        android:background="@drawable/wallet_background"
        android:gravity="center"

        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/eoutleticon"
            android:layout_width="@dimen/homecard_height"
            android:layout_height="50dp"
            android:visibility="gone"

            android:src="@drawable/logo_arabic_white">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
            android:id="@+id/walletamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eoutleticon"
            android:text=" "
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_25sdp" />

        <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="رصيد حسابك"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moneyadd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:weightSum="2"
        android:layout_marginRight="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_top"
        android:layout_below="@+id/gradientlayout"
        android:layout_marginTop="@dimen/text_size">

        <com.eoutlet.Eoutlet.customview.HelveticaNueAlticBoldTextView
            android:id="@+id/btnAmountadded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/red_rectangle"
            android:backgroundTint="#000000"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:singleLine="true"
            android:text="اضافة رصيد لحسابي"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_eng" />

        <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
            android:id="@+id/edtamouttobeadded"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_weight="1.1"
            android:background="@drawable/amount_background"
            android:gravity="center"
            android:hint="اضافة رصيد "
            android:inputType="number"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:singleLine="true"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
        <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moneyadd"
            android:text="التحويلات السابقة"
            android:visibility="gone"
            android:id="@+id/wallethistorytitle"
            android:layout_alignParentRight="true"
            android:textColor="#686E7F"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:textSize="@dimen/maintextsize" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wallethistorytitle"
            android:layout_marginTop="@dimen/text_size_eng"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginRight="@dimen/margin_top"
            android:layout_marginBottom="@dimen/margin_top"


            android:id="@+id/walletdetail_recycler"/>

    </RelativeLayout>

    </LinearLayout>
