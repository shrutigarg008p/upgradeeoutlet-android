<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/main_icon2"
                android:layout_height="@dimen/main_icon2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"

                android:scaleType="fitXY"
                android:src="@drawable/ic_elogo"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/main_icon"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="@dimen/logo_height"



                android:src="@mipmap/logo_arabig_new_png" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:text="الأعضاء المسجلين"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/text_size"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="54dp"
                android:layout_marginRight="20dp"

                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/radio_width"


                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardElevation="2dp"

                    app:cardUseCompatPadding="true">

                    <RadioGroup
                        android:id="@+id/toggle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"

                        android:weightSum="3">


                        <com.eoutlet.Eoutlet.customview.MyRadioButton
                            android:id="@+id/btnmobile"
                            style="@style/MyCustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="@string/mobilewithoutunderline"


                            android:textStyle="bold" />

                        <com.eoutlet.Eoutlet.customview.MyRadioButton
                            android:id="@+id/btnemail"
                            style="@style/MyCustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1"
                            android:textStyle="bold"

                            android:text="@string/emailwithoutunderline"
                           />

                        <com.eoutlet.Eoutlet.customview.MyRadioButton
                            android:id="@+id/getotp"
                            style="@style/MyCustomRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:singleLine="true"></com.eoutlet.Eoutlet.customview.MyRadioButton>



                    </RadioGroup>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!--
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="البريد الإلكتروني"
                                    android:singleLine="true"
                                    android:gravity="center_horizontal"
                                    android:inputType="textEmailAddress"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"

                                    android:background="@drawable/edittext_background"


                                    android:textColor="@color/colour_black"
                                    android:layout_marginTop="@dimen/margin_top"
                                    android:id="@+id/userName"
                                    android:padding="@dimen/et_padding"


                                    />-->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/et_hint"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/veryfybymobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight=".28"


                    android:background="@drawable/spinner_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/countrycodeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"


                        android:popupTheme="@style/PopupBackGround"


                        android:spinnerMode="dialog"
                        android:textColor="@android:color/black" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:src="@drawable/ic_country" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:src="@drawable/dropdown" />

                </RelativeLayout>



                <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
                    android:id="@+id/edtmobilrnumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/text_size"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edittext_background"
                    android:drawableLeft="@drawable/signup_phone"

                    android:gravity="right|center_vertical"

                    android:hint="رقم الجوال"


                    android:inputType="number"
                    android:paddingLeft="8dp"

                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colour_black"


                    android:textSize="@dimen/maintextsize"


                    />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/et_hint"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/text_size"
                    android:background="@drawable/edittext_background"
                    android:drawableLeft="@drawable/ic_icon"

                    android:gravity="center_vertical|right"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/maintextsize"
                    android:visibility="gone"


                    />


                <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
                    android:id="@+id/userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/text_size"
                    android:background="@drawable/edittext_background"
                    android:drawableLeft="@drawable/ic_lock"


                    android:hint="كلمة السر"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical|right"

                    android:singleLine="true"


                    android:textColor="@color/colour_black"

                    android:textSize="@dimen/maintextsize"
                    android:visibility="gone"


                    />
            </LinearLayout>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_background"

                android:gravity="center_horizontal"
                android:hint="كلمه السر"
                android:inputType="textPassword"
                android:padding="@dimen/et_padding"

                android:singleLine="true"
                android:textColor="@color/colour_black"
                android:visibility="gone"

                />

            <View
                android:id="@+id/passworddivider"
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint"
                android:textColor="@color/colour_black"

                android:visibility="gone" />

            <com.eoutlet.Eoutlet.customview.HelveticaNue75BoldTextview
                android:id="@+id/loginClick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"


                android:layout_marginRight="20dp"
                android:background="@drawable/red_rectangle"
                android:gravity="center"
                android:text="الدخول برسالة نصية"
                android:textColor="@color/white"

                android:textSize="@dimen/maintextsize" />


            <LinearLayout
                android:id="@+id/getotpui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"


                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:weightSum="3"

                    >

                    <View
                        android:layout_width="0dp"

                        android:layout_height="0.1sp"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1.4"
                        android:background="@color/colour_black" />

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"

                        android:gravity="center_horizontal"
                        android:text="أو"

                        android:textColor="@color/colour_black"
                        android:textSize="@dimen/text_size_eng"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"

                        android:layout_height="0.1dp"

                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1.4"
                        android:background="@color/colour_black" />


                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_triangle"

                    android:gravity="center"
                    android:text="طلب مكتب المدعي العام"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"

                    android:visibility="gone" />

            </LinearLayout>

            <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="هل نسيت كلمة المرور الخاصة بك؟"
                android:textColor="@color/colorPrimary"


                android:textSize="@dimen/text_size_eng"

                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible"


                >

                <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="انشاء حساب"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_eng"


                    />

                <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                    android:id="@+id/acc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="ليس لدي حساب موجود؟"
                    android:textColor="@color/et_hint"
                    android:textSize="@dimen/text_size_eng"


                    />

            </LinearLayout>

            <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                android:id="@+id/HelpSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/termsandconditions"


                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size"
                android:visibility="visible" />
            <!--  <View
                  android:layout_width="80dp"
                  android:layout_height="1dp"

                  android:layout_gravity="center_horizontal"
                  android:background="@color/colorPrimary"/>-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
