<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/button_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <com.eoutlet.Eoutlet.customview.MulishBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="ORDER NO : "
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_10sdp" />

                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/orderidtrackorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="47899898"
                    android:textColor="@color/et_hint"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/totalamounttrackorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="right"
                    android:maxLines="2"
                    android:text="550 SAR"
                    android:textColor="@color/et_hint"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/textTrackOrder"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_3sdp"
                    android:rotation="90"
                    android:src="@drawable/ic_right_blackarrow"
                    android:text="تعقب الطلب"
                    android:tint="#1A1824" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutChildtrackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainHeaderView"
            android:orientation="vertical"
            android:visibility="gone"></LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
