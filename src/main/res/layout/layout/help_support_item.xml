<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/helpItemClick"
        android:layout_marginTop="@dimen/text_size"
        android:layout_marginRight="@dimen/text_size">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_size"
            android:textColor="@color/colour_black"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/text_size"


            android:layout_centerVertical="true"
            android:id="@+id/helpitemName"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileImage"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/text_size"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/grey_colour"/>

</LinearLayout>