<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="#F5F5F5"
        android:textColor="@color/colour_black"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp" />

    <com.eoutlet.Eoutlet.customview.MulishRegularTextView
        android:id="@+id/previeworderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:text="Preview Order No: 27899898"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_eng"
        />

    <LinearLayout
        android:id="@+id/mainHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/et_padding"
        android:layout_marginBottom="@dimen/et_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/childitemimage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="0.2"

            android:src="@drawable/shoe1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1.6"
            android:gravity="left"
            android:orientation="vertical">

            <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                android:id="@+id/childorderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="Name"
                android:gravity="left"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/_11sdp" />

            <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                android:id="@+id/childorderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:visibility="gone"
                android:gravity="left"
                android:text="ORDER No:27899898"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/text_size_eng"
                />

            <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                android:id="@+id/childtotalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="Total Amount:550 SAR"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/_11sdp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="left"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                >

                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/childcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/childsize"
                    android:layout_marginRight="5dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:maxLines="1"
                    android:text="Color:Red"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />


                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/childqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:maxLines="1"
                    android:layout_toRightOf="@+id/childcolor"
                    android:layout_alignWithParentIfMissing="true"


                    android:text="Qty :3"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />


                <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                    android:id="@+id/childsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:text="Size:9 UK"


                    android:textAlignment="viewEnd"
                    android:layout_marginRight="5dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />





            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>