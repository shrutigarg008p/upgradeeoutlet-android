<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    android:layout_marginTop="@dimen/text_size_eng"
    android:id="@+id/singleproduct"


    android:background="@drawable/rounded_corner_shape">


    <ImageView
        android:layout_width="190dp"
        android:layout_height="@dimen/product_height2"
        android:layout_gravity="center"
        android:scaleType="fitXY"



        android:gravity="center_horizontal"
        android:id="@+id/product_list_image"
        android:src="@drawable/shoe1"/>


    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_size"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="gone"

        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"

        android:id="@+id/productname"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end"

        android:layout_gravity="center_horizontal"
        android:text="حذاء من امبريو ارماني"
        android:textStyle="bold"
        android:textColor="#1E2022"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:foreground="@drawable/cut_line"
            android:text="999SAR"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/text_size_eng"
            android:textColor="#1E2022"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"

            android:textSize="@dimen/list_item_size" />

        <TextView
            android:id="@+id/newprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/text_size_eng"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="999SAR"
            android:textColor="@color/colorPrimary"

            android:textSize="@dimen/list_item_size"
            android:visibility="gone" />


    </RelativeLayout>










</LinearLayout>