<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_21sdp">

        <LinearLayout
            android:id="@+id/profileItemClick"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/profileImage"

            android:background="@color/white"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/shadow"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                app:cardBackgroundColor="#0000000F"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/arrow_imageview"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="0.25"
                        android:src="@drawable/ic_right_yellowarrow"
                        android:tint="@color/colorPrimary" />


                    <ImageView
                        android:id="@+id/instagramImage"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_weight="0.25"
                        android:src="@drawable/ic_instagram"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/twitterImage"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/instagramImage"
                        android:layout_weight="0.25"
                        android:src="@drawable/ic_twitter_blue"
                        android:visibility="gone" />

                    <com.eoutlet.Eoutlet.customview.HelveticaNueAlticArabicTextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:paddingRight="5dp"
                        android:text="لوحة تحكم الحساب"


                        android:textAlignment="center"
                        android:textColor="#434343"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/text_size"

            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_8sdp"

            android:src="@drawable/ic_logout" />
    </RelativeLayout>

</RelativeLayout>