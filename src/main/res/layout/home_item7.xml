<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp">


    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"


        >


        <ImageView
            android:id="@+id/man_image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"




            />
        <!-- </androidx.cardview.widget.CardView>>-->
    </FrameLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_size"
        android:id="@+id/productname7"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/colour_black"
        android:ellipsize="end"
        android:maxLines="1"
       />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_size"
            android:text=""




            android:ellipsize="end"
            android:maxLines="1"

            android:id="@+id/oldprice7"
            android:foreground="@drawable/cut_line"
            android:textColor="#C0C0C0"

            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_size"
            android:text=""


            android:id="@+id/newprice7"
            android:ellipsize="end"
            android:maxLines="1"

            android:layout_marginLeft="@dimen/text_size"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"/>


    </RelativeLayout>
</LinearLayout>