<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/thankyoumain"
    android:visibility="gone"
    android:background="@color/white"



    tools:context=".activities.ThankyouActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical"

            android:layout_marginBottom="@dimen/margin_top">
            <ImageView
                android:layout_width="@dimen/main_icon2"
                android:layout_height="@dimen/main_icon2"

                android:layout_gravity="center_horizontal"

                android:src="@drawable/ic_elogo"/>

            <ImageView
                android:layout_width="@dimen/main_icon"
                android:layout_height="@dimen/main_icon2"
                android:layout_gravity="center_horizontal"





                android:src="@mipmap/logo_arabig_new_png" />


            <ImageView
                android:id="@+id/statuImage"
                android:layout_width="@dimen/main_icon2"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"



                android:src="@drawable/ic_final_check" />



            <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="مبروك
"




                android:id="@+id/statusflag"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_size"
                android:textSize="@dimen/text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/signup"

                android:layout_marginTop="@dimen/text_size"



                >
                <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/et_hint"
                    android:text="تم انشاء طلبكم بنجاح"
                    android:id="@+id/acc1"
                    android:textSize="@dimen/text_size_eng"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">



                <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/et_hint"
                    android:textStyle="bold"
                    android:id="@+id/resultOrderId"

                    android:text=""
                    android:layout_marginTop="@dimen/text_size"
                    android:textSize="20dp"
                    android:layout_marginLeft="@dimen/margin_top"

                    />


                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/et_hint"
                    android:textStyle="bold"

                    android:text="طلب رقم :"
                    android:layout_marginTop="@dimen/text_size"
                    android:textSize="20dp"
                    android:layout_marginLeft="@dimen/_12sdp"

                    />


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>