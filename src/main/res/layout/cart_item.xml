<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp"

    app:cardElevation="10dp"
    app:cardUseCompatPadding="false"

    android:elevation="@dimen/_5sdp"
    android:id="@+id/cartItemContainer"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"

    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"

    >

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/outstockbar"
        android:visibility="gone"
        />


    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
        android:id="@+id/mainitemclick"

       android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
       android:weightSum="2">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:gravity="center"
    android:clickable="false">

    <include layout="@layout/quantity_upgrade_layout"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:gravity="center_vertical"/>




</LinearLayout>

       <LinearLayout
    android:layout_width="0dp"
    android:layout_height="@dimen/_100sdp"
    android:orientation="vertical"


    android:layout_marginRight="@dimen/text_size_eng"
    android:gravity="right"
    android:layout_weight="1.3">
           <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_9sdp"
        android:textSize="@dimen/_9sdp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:maxLines="2"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        android:id="@+id/productname"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="حذاء مخمل ارماني"
        android:background="@android:color/transparent"

        android:textColor="#272140"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_9sdp"
               android:layout_gravity="right"
               android:orientation="horizontal">

               <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                   android:id="@+id/size"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text=" "
                   android:textColor="#272140"
                   android:textStyle="bold"
                   android:textSize="@dimen/_9sdp"

                   android:background="@android:color/transparent"/>

               <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="5dp"
                   android:text="المقاس :"
                   android:textStyle="bold"
                   android:background="@android:color/transparent"
                   android:textColor="#272140"
                   android:textSize="@dimen/_9sdp" />


           </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_9sdp"
        android:orientation="horizontal">

        <com.eoutlet.Eoutlet.customview.MonestrateRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="@drawable/cut_line"
            android:text="999SAR"
            android:layout_gravity="center_vertical"

            android:gravity="center_vertical"

            android:id="@+id/oldPrice"
            android:textColor="#77838F"
            android:textSize="@dimen/_9sdp" />

        <com.eoutlet.Eoutlet.customview.MonestarteSemiBoldTextView
            android:id="@+id/newPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_9sdp"
            android:text="999SAR"
            android:textStyle="bold"
            android:textColor="#272140"
            android:textSize="@dimen/_9sdp" />


    </LinearLayout>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="غير متوفر بالمخزون"
               android:layout_gravity="right"
               android:gravity="right"
               android:layout_marginTop="@dimen/_4sdp"

                 android:visibility="gone"

               android:id="@+id/textoutstock"
               android:textSize="@dimen/_7sdp"
               android:textColor="@color/colorPrimarytext"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_eng"
            android:text="1:"

            android:id="@+id/quantity"

            android:textColor="@color/colour_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_eng"
            android:text=" الكمية"
            android:layout_marginLeft="@dimen/text_size"
            android:textColor="@color/colour_black"/>


    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"

        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_9sdp"


        android:layout_weight="0.7">

            <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/product_image"


                android:scaleType="fitXY"
    android:src="@drawable/pro1"/>




    </LinearLayout>


   </LinearLayout>


</androidx.cardview.widget.CardView>