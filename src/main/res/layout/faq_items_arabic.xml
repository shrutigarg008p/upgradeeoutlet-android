<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/faqCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/shadow"
            android:elevation="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:cardBackgroundColor="#eee"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="@dimen/_1sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5">


                <ImageView
                    android:id="@+id/faqDropDownIcon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ic_down_arrow"
                    android:tint="@color/colour_black" />

                <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
                    android:id="@+id/faqQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@id/faqDropDownIcon"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:text="How do I register on the e-Outlet website and do I need to do so to complete the purchase process?"
                    android:textAlignment="center"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <com.eoutlet.Eoutlet.customview.HelveticaRegularTextView
            android:id="@+id/faqAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:autoLink="web"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:linksClickable="true"
            android:padding="@dimen/_5sdp"
            android:text="You can register through the registration page on the site and you must make sure that All data are correct, as you will not be able to purchase in the event of any deficiency or discover that the information provided is incorrect In the case of the application, registration is done by selecting My Account at the bottom of the application"
            android:textAlignment="center"
            android:textColor="#434343"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

</RelativeLayout>