<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_product_height"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"

        android:id="@+id/cartItemContainer"

        android:weightSum="2">


    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/cart_product_height"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/text_size"
            android:gravity="center_horizontal"
            android:layout_weight="1">
            <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:ellipsize="end"
                android:maxLines="4"
                android:id="@+id/coproductname"
                android:layout_gravity="right"
                android:text="حذاء مخمل ارماني"
                android:textStyle="bold"
                android:textColor="#272140"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/maintextsize"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/cut_line"
                    android:text="999SAR"
                    android:visibility="gone"
                    android:id="@+id/oldPrice"
                    android:textColor="#777777"
                    android:textSize="@dimen/text_size_eng" />

                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:id="@+id/conewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/text_size"
                    android:text="999SAR"

                    android:textColor="@color/colorPrimarytext"
                    android:textSize="@dimen/text_size_eng" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/maintextsize"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:id="@+id/cosize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#272140"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_eng" />

                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="المقاس :"

                    android:textColor="#1E4044"
                    android:textSize="@dimen/text_size_eng" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/maintextsize"
                android:orientation="horizontal">
                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_eng"
                    android:text="1:"
                    android:textStyle="bold"

                    android:id="@+id/coquantity"

                    android:textColor="#1E4044"/>

                <com.eoutlet.Eoutlet.customview.HelveticaBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_eng"
                    android:text= " الكمية :"
                    android:layout_marginLeft="5dp"
                    android:textColor="#272140"/>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:visibility="gone"



                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src =  "@drawable/ic_edit_icon"
                    android:visibility="gone"

                    android:textColor="@color/et_hint"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    android:src =  "@drawable/ic_delete_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentLeft="true"



                    android:id="@+id/deleteItemfromCart"
                    android:textColor="#777777"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sizealter"

                    android:layout_toRightOf="@+id/deleteItemfromCart"

                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"

                    >

                    <TextView
                        android:id="@+id/cart_minace_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"



                        android:background="@drawable/red_rectangle"


                        android:paddingLeft="8dp"

                        android:paddingRight="8dp"


                        android:text="-"
                        android:textColor="@color/white"

                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/cart_selectedQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"





                        android:background="@drawable/rectangular_border"


                        android:paddingLeft="@dimen/padding_in_cart_qty"

                        android:paddingRight="@dimen/padding_in_cart_qty"

                        android:text="1"
                        android:textColor="@color/et_hint"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/cart_plus_button"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/red_rectangle"
                        android:paddingLeft="5dp"

                        android:paddingRight="5dp"


                        android:layout_alignParentRight="true"

                        android:text="+"
                        android:textColor="@color/white"

                        android:textSize="@dimen/text_size" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="@dimen/cart_product_height"
                android:id="@+id/product_image"
                android:layout_alignParentRight="true"

                android:layout_marginRight="0dp"
                


                android:scaleType="fitXY"
                android:src="@drawable/pro1"/>


</RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_margin="@dimen/text_size_eng"
        android:background="@color/et_hint"

        android:visibility="visible" />
</LinearLayout>