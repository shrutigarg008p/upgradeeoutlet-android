<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >

    <androidx.cardview.widget.CardView
        android:id="@+id/remembercardclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="6dp"
        android:elevation="6dp"
        app:cardElevation="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="@dimen/text_size_eng"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"





           >

            <com.eoutlet.Eoutlet.customview.MonestarteSemiBoldTextView
                android:id="@+id/name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:text="eoutleteoutlet"
                android:textColor="#1E2022"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"

                    android:gravity="left|center_vertical">

                    <com.eoutlet.Eoutlet.customview.MulishRegularTextView
                        android:id="@+id/cardnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:text="40555******0001"

                        android:textColor="#1E2022"
                        android:textSize="@dimen/_10sdp"

                        android:textStyle="bold"


                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_eng"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:scaleType="fitXY"

                        android:src="@drawable/cardsimage" />

                </LinearLayout>



            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/cardradiobutton"

                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|left"

                android:background="@drawable/ic_circle" />
        </RelativeLayout>



     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/cvvlayout"
         android:background="@drawable/save_card_border"
         android:layout_gravity="left"
android:visibility="gone"
         android:orientation="horizontal"
         android:layout_marginTop="@dimen/_10sdp"
         android:layout_marginBottom="8dp"
        >

         <ImageView
             android:layout_width="30dp"
             android:layout_height="25dp"
             android:layout_centerVertical="true"
             android:layout_gravity="center_vertical|right"

             android:layout_toRightOf="@+id/name"

             android:src="@drawable/cvv_cards" />

            <com.eoutlet.Eoutlet.customview.HalveticRegularEditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="4"
                android:inputType="number"
                android:textSize="@dimen/_8sdp"
                android:id = "@+id/savedcardcvv"

                android:padding="8dp"
                android:singleLine="true"
                android:ellipsize="end"

                android:hint="3 DIGIT CODE"/>
     </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>