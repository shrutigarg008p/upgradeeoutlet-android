<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentRight="true"
        android:visibility="gone"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"

            android:layout_toRightOf="@+id/name"
            android:background="@drawable/rectangular_border"

            android:src="@drawable/mada" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/rectangular_border"
            android:padding="1dp"
            android:src="@drawable/ic_visa"

            />

        <ImageView
            android:id="@+id/cardname"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name"
            android:background="@drawable/rectangular_border"
            android:padding="1dp"
            android:src="@drawable/ic_mastercard" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/toolbar_color"
                android:src="@drawable/black_card" />

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/et_hint"
        android:text="الاسم على البطاقة"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/edtcardname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:gravity="right"
        android:hint="كما يظهر على البطاقة الائتمانية "
        android:padding="@dimen/et_padding"
        android:singleLine="true"

        android:textColor="@color/colour_black"


        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/et_hint" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/et_hint"
        android:text="رقم البطاقة الائتمانية "
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_top"
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/edtcardnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:gravity="right"

        android:hint="مثال : xxxx xxx xxxx 143"
        android:inputType="number"
        android:padding="@dimen/et_padding"
        android:singleLine="true"

        android:textColor="@color/colour_black"


        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/et_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/et_hint"
        android:text="تاريخ الإنتهاء "
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_top"
        android:textSize="@dimen/text_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/monthandyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:focusableInTouchMode="true"
                android:cursorVisible="false"
                android:focusable="false"
                android:layout_marginRight="30dp"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:textIsSelectable="true"
                android:inputType="none"
                android:hint="السنة / الشهر"
                android:padding="@dimen/et_padding"
                android:singleLine="true"

                android:textColor="@color/colour_black"


                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"

                android:layout_marginRight="30dp"
                android:background="@color/et_hint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/cvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"


                android:background="@android:color/transparent"
                android:gravity="right"

                android:hint="الكود(3 أرقام) "
                android:inputType="number"
                android:padding="@dimen/et_padding"
                android:singleLine="true"

                android:textColor="@color/colour_black"


                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"


                android:background="@color/et_hint" />

        </LinearLayout>










    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        >

        <ImageView
            android:layout_width="@dimen/text_size_eng"
            android:layout_height="wrap_content"
            android:src="@drawable/closed"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colour_black"
            android:layout_centerInParent="true"
            android:text="حفظ بيانات البطاقة الائتمانية لعمليات الشراء القادمة"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_eng"/>

        <ImageView
            android:layout_width="@dimen/text_size"
            android:layout_height="@dimen/text_size"
            android:layout_centerInParent="true"
            android:id = "@+id/remembermeselect"
            android:src="@drawable/checkboxunselected"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="15dp"/>





    </RelativeLayout>

</LinearLayout>
