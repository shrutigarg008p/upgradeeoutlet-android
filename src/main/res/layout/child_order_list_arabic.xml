<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#F5F5F5"

        android:textColor="@color/colour_black"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"/>
    <TextView
        android:id="@+id/previeworderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:text="Preview Order No: 27899898"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_eng"
        />
    <LinearLayout
        android:id="@+id/mainHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

            android:layout_marginTop="@dimen/et_padding"
        android:layout_marginBottom="@dimen/et_padding"

        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1.6"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/childorderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="Name"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/_11sdp"
                />

            <TextView
                android:id="@+id/childorderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:visibility="gone"
                android:text="ORDER No:27899898"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/text_size_eng"
              />

            <TextView
                android:id="@+id/childtotalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="Total Amount:550 SAR"
                android:textColor="@color/et_hint"
                android:textSize="@dimen/_11sdp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"

>
                <TextView
                    android:id="@+id/childsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:maxLines="1"
                    android:layout_alignParentRight="true"
                    android:textAlignment="viewEnd"


                    android:text="بحجم: 9UK"
                    android:layout_marginRight="5dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/childqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"



                    android:maxLines="1"
                    android:layout_toLeftOf="@+id/childcolor"


                    android:layout_alignWithParentIfMissing="true"



                    android:text="الكمية:3"
                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />


                <TextView
                    android:id="@+id/childcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_toLeftOf="@+id/childsize"
                    android:layout_marginRight="5dp"

                    android:layout_alignWithParentIfMissing="true"

                    android:maxLines="1"


                    android:text="اللون: Red"

                    android:textColor="@color/colour_black"
                    android:textSize="@dimen/_8sdp" />





            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/childitemimage"
            android:layout_weight="0.2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_gravity="end"

            android:src="@drawable/shoe1" />


    </LinearLayout>

</LinearLayout>