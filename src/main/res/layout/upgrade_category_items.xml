<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginRight="@dimen/text_size_eng"
    android:layout_gravity="right"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/bottomline"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:foregroundGravity="right"
            android:scaleType="fitXY"

            android:src="@drawable/rightcateimage" />



    </RelativeLayout>

    <com.eoutlet.Eoutlet.customview.MulishBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:maxLines="2"

        android:id="@+id/bannername"
        android:textColor="@color/colour_black"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:ellipsize="marquee"
        android:textSize="@dimen/_8sdp"

        android:layout_alignBottom="@+id/catImage"
        android:text=" "/>

</LinearLayout>
