<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/updateInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"


    tools:context=".activities.MainActivity">


    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_alignParentTop="true"
        android:background="@color/toolbar_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="25dp"


                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_canvas" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="الملف الشخصي"
                android:visibility="gone"
                android:textColor="@color/colour_black"
                android:textSize="@dimen/list_group_size"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/main_icon2"
                android:layout_height="@dimen/main_icon2"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:src="@drawable/ic_elogo" />

            <ImageView
                android:layout_width="@dimen/main_icon"
                android:layout_height="@dimen/main_icon2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"


                android:src="@drawable/ic_canvas" />

            <EditText
                android:id="@+id/updatefirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/et_padding"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="الاسم الأول"
                android:padding="@dimen/et_padding"
                android:singleLine="true"
                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"


                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint" />

            <EditText
                android:id="@+id/updatelastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="
اسم العائلة"
                android:padding="@dimen/et_padding"
                android:singleLine="true"

                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint"

                android:textColor="@color/colour_black" />

            <EditText
                android:id="@+id/updateeMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="البريد الإلكتروني"
                android:padding="@dimen/et_padding"
                android:singleLine="true"

                android:textColor="@color/colour_black"

                android:textColorHint="@color/et_hint"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint"

                android:textColor="@color/colour_black" />

            <EditText
                android:id="@+id/updatemobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:digits="0123456789+"
                android:gravity="center_horizontal"
                android:hint="رقم الجوال"
                android:inputType="phone"
                android:padding="@dimen/et_padding"
                android:singleLine="true"
                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint"

                android:textColor="@color/colour_black" />


            <TextView
                android:id="@+id/updateProfile"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/red_rectangle"
                android:gravity="center"
                android:text="تحديث بيانات الحساب"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/oldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="60dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="كلمة السر الجديدة"
                android:padding="@dimen/et_padding"
                android:singleLine="true"
                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"


                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="تأكيد كلمة المرور الجديدة"
                android:padding="@dimen/et_padding"
                android:singleLine="true"

                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint" />

            <EditText
                android:id="@+id/confirmNewpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="رقم الجوال"
                android:inputType="phone"
                android:padding="@dimen/et_padding"
                android:singleLine="true"
                android:textColor="@color/colour_black"
                android:textColorHint="@color/et_hint"
                android:visibility="gone"

                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/et_hint"
                android:textColor="@color/colour_black"

                android:visibility="gone" />


            <TextView
                android:id="@+id/saveNewPassword"
                android:layout_width="@dimen/btn_width"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/red_rectangle"
                android:gravity="center"
                android:text="غير كلمة السر"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>